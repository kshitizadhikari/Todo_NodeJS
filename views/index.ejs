<%- include("Layouts/header.ejs") %>

<div class="main">
  <div class="titleBox">
    <div class="titleText">
      <h1><%= listTitle %></h1>
      <h2><%= currentDate %></h2>
    </div>
  </div>
  <div class="form">
    <form action="/" class="todoBox" method="post">
      <p>Enter your Todo</p>
      <input
        placeholder="Your Todo"
        class="todoBox-input"
        name="todo"
        type="text"
        autocomplete="off"
      />
      <br />
      <div class="btnBox">
        <button
          type="submit"
          class="submit-btn"
          name="submitBtn"
          value="normalList"
        >
          ADD
        </button>
      </div>
    </form>
  </div>
  <div class="listBox">
    <p>Your Todos</p>

    <div class="todos">
      <ul>
        <% todo.forEach(function(item) { %>
        <div class="listItem">
          <input type="checkbox" />
          <li><%= item %></li>
        </div>
        <% }); %>
      </ul>
    </div>
  </div>
</div>
<%- include("Layouts/footer.ejs") %>
